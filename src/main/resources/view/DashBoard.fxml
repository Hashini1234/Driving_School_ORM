<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="Ank1" prefHeight="600.0" prefWidth="950.0"
            style="-fx-background-color: #E6CFA9;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.drivingscool.controller.DashboardController">

    <VBox fx:id="v1" alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;"
          AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" VBox.vgrow="ALWAYS">

        <!-- Header styled like Instructor UI -->
        <Label fx:id="dSchool" alignment="CENTER" maxWidth="Infinity"
               prefHeight="80.0" prefWidth="841.0"
               style="-fx-font-size: 28px; -fx-font-weight: bold;
                      -fx-text-fill: #eff4fe;
                      -fx-background-color: #3b0404;
                      -fx-background-radius: 15;
                      -fx-padding: 20;"
               text="Driving School Management ">
            <font><Font name="System Bold" size="28.0" /></font>
            <tooltip><Tooltip text="Central Management Dashboard for All Entities" /></tooltip>
        </Label>

        <Separator style="-fx-background-color: #3b0404;" HBox.hgrow="ALWAYS" />

        <!-- Search Bar -->
        <HBox alignment="CENTER" spacing="10"
              style="-fx-padding: 10; -fx-background-color: #fdf6ee; -fx-background-radius: 10;">
            <TextField fx:id="txtSearch"
                       promptText="Search for Users, Students, Payments, Courses, Lessons, Instructors..."
                       style="-fx-background-radius: 20; -fx-padding: 10; -fx-font-size: 14px;"
                       HBox.hgrow="ALWAYS">
                <tooltip><Tooltip text="Global search across all entities" /></tooltip>
            </TextField>
            <Button fx:id="btnSearch" onAction="#handleSearch"
                    style="-fx-background-color: #C1856D; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 20; -fx-padding: 10 20; -fx-cursor: hand;"
                    text="Search">
                <font><Font size="14.0" /></font>
                <tooltip><Tooltip text="Perform search" /></tooltip>
            </Button>
        </HBox>

        <!-- Entity Cards Section -->
        <GridPane alignment="CENTER" hgap="20" style="-fx-padding: 20;" vgap="20" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints percentWidth="33.33" />
                <ColumnConstraints percentWidth="33.33" />
                <ColumnConstraints percentWidth="33.33" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>

            <!-- User Card -->
            <VBox fx:id="userId" alignment="CENTER" spacing="10"
                  style="-fx-padding: 20; -fx-background-color: #ffffff;
                         -fx-background-radius: 15; -fx-border-color: #C1856D; -fx-border-radius: 15;"
                  GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3b0404;" text="Users" />
                <Label fx:id="lblTotalUsers" style="-fx-font-size: 24px; -fx-text-fill: #6b7280;" text="0" />
                <Button fx:id="btnManageUsers" onAction="#handleManageUsers"
                        style="-fx-background-color: #C1856D; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 16; -fx-cursor: hand;"
                        text="Manage Users">
                    <font><Font size="12.0" /></font>
                </Button>
            </VBox>

            <!-- Student Card -->
            <VBox fx:id="studentId" alignment="CENTER" spacing="10"
                  style="-fx-padding: 20; -fx-background-color: #ffffff;
                         -fx-background-radius: 15; -fx-border-color: #C1856D; -fx-border-radius: 15;"
                  GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3b0404;" text="Students" />
                <Label fx:id="lblTotalStudents" style="-fx-font-size: 24px; -fx-text-fill: #6b7280;" text="0" />
                <Button fx:id="btnManageStudents" onAction="#handleManageStudents"
                        style="-fx-background-color: #C1856D; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 16; -fx-cursor: hand;"
                        text="Manage Students">
                    <font><Font size="12.0" /></font>
                </Button>
            </VBox>

            <!-- Payment Card -->
            <VBox fx:id="paymentId" alignment="CENTER" spacing="10"
                  style="-fx-padding: 20; -fx-background-color: #ffffff;
                         -fx-background-radius: 15; -fx-border-color: #C1856D; -fx-border-radius: 15;"
                  GridPane.columnIndex="2" GridPane.rowIndex="0">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3b0404;" text="Payments" />
                <Label fx:id="lblTotalPayments" style="-fx-font-size: 24px; -fx-text-fill: #6b7280;" text="0" />
                <Button fx:id="btnManagePayments" onAction="#handleManagePayments"
                        style="-fx-background-color: #C1856D; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 16; -fx-cursor: hand;"
                        text="Manage Payments">
                    <font><Font size="12.0" /></font>
                </Button>
            </VBox>

            <!-- Course Card -->
            <VBox fx:id="courseId" alignment="CENTER" spacing="10"
                  style="-fx-padding: 20; -fx-background-color: #ffffff;
                         -fx-background-radius: 15; -fx-border-color: #C1856D; -fx-border-radius: 15;"
                  GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3b0404;" text="Courses" />
                <Label fx:id="lblTotalCourses" style="-fx-font-size: 24px; -fx-text-fill: #6b7280;" text="0" />
                <Button fx:id="btnManageCourses" onAction="#handleManageCourses"
                        style="-fx-background-color: #C1856D; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 16; -fx-cursor: hand;"
                        text="Manage Courses">
                    <font><Font size="12.0" /></font>
                </Button>
            </VBox>

            <!-- Lesson Card -->
            <VBox fx:id="lessonId" alignment="CENTER" spacing="10"
                  style="-fx-padding: 20; -fx-background-color: #ffffff;
                         -fx-background-radius: 15; -fx-border-color: #C1856D; -fx-border-radius: 15;"
                  GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3b0404;" text="Lessons" />
                <Label fx:id="lblTotalLessons" style="-fx-font-size: 24px; -fx-text-fill: #6b7280;" text="0" />
                <Button fx:id="btnManageLessons" onAction="#handleManageLessons"
                        style="-fx-background-color: #C1856D; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 16; -fx-cursor: hand;"
                        text="Manage Lessons">
                    <font><Font size="12.0" /></font>
                </Button>
            </VBox>

            <!-- Instructor Card -->
            <VBox fx:id="instructorId" alignment="CENTER" spacing="10"
                  style="-fx-padding: 20; -fx-background-color: #ffffff;
                         -fx-background-radius: 15; -fx-border-color: #C1856D; -fx-border-radius: 15;"
                  GridPane.columnIndex="2" GridPane.rowIndex="1">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3b0404;" text="Instructors" />
                <Label fx:id="lblTotalInstructors" style="-fx-font-size: 24px; -fx-text-fill: #6b7280;" text="0" />
                <Button fx:id="btnManageInstructors" onAction="#handleManageInstructors"
                        style="-fx-background-color: #C1856D; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 16; -fx-cursor: hand;"
                        text="Manage Instructors">
                    <font><Font size="12.0" /></font>
                </Button>
            </VBox>
        </GridPane>
    </VBox>
</AnchorPane>
